<%- contentFor('pageSection') %>
<div style="padding:1.8rem"></div>
<div class="container-fluid">
    <main class="my-3 ms-sm-auto px-md-5">
        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">全员杯第二届挑战赛 - 竞赛进行中</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <%if(isLogined){%>
                        <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="location='/contest/home'">
                            <i class="fa fa-home me-2" aria-hidden="true"></i>
                            我的参与
                        </button>
                    <%}%>
                    <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="location='/contest/rank'">
                        <i class="fa fa-list-ol me-2" aria-hidden="true"></i>
                        排行榜
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="location='/contest/problemSet'">
                        <i class="fa fa-book me-2" aria-hidden="true"></i>
                        试题册
                    </button>
                </div>
                <%if(isLogined){%>
                    <button type="button" class="me-2 btn btn-sm btn-outline-primary mt-2"><i class="fa fa-cloud-upload me-2" aria-hidden="true"></i>答案提交</button>
                <%} else {%>
                    <button onclick='location="/auth/login"'type="button" class="me-2 btn btn-sm btn-outline-primary mt-2"><i class="fa fa-cloud-upload me-2" aria-hidden="true"></i>
                        登录后即可参与比赛
                    </button>
                <%}%>

            </div>
        </div>
        <%if (contestToggle === 'rank'){%>
            <%-include('rank.ejs')%>
        <%}%>
        <%if (contestToggle === 'home'){%>
            <%-include('home.ejs')%>
        <%}%>
        <%if (contestToggle === 'problemSet'){%>
            <%-include('problemSet.ejs')%>
        <%}%>
    </main>
</div>